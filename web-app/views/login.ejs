<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Sistema de Gestão</title>
    <!-- Importação do MaterializeCSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Importação dos ícones do MaterializeCSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Importação do CSS personalizado -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Cabeçalho da página -->
    <nav class="teal darken-2">
        <div class="nav-wrapper container">
            <a href="/" class="brand-logo">Sistema de Login</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/register">Cadastrar</a></li>
                <li><a href="/forgot-password">Esqueci a Senha</a></li>
            </ul>
            <!-- Menu para dispositivos móveis -->
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        </div>
    </nav>
    
    <!-- Menu lateral para dispositivos móveis -->
    <ul class="sidenav" id="mobile-demo">
        <li><a href="/register">Cadastrar</a></li>
        <li><a href="/forgot-password">Esqueci a Senha</a></li>
    </ul>

    <!-- Conteúdo principal -->
    <div class="container">
        <div class="row">
            <div class="col s12 m8 offset-m2 l6 offset-l3">
                <div class="card-panel z-depth-3 mt-5">
                    <h4 class="center-align teal-text text-darken-2">Login</h4>
                    
                    <!-- Formulário de login -->
                    <form id="login-form" action="/login" method="POST">
                        <div class="input-field">
                            <i class="material-icons prefix">person</i>
                            <input id="username" name="username" type="text" class="validate" required>
                            <label for="username">Nome de Usuário</label>
                        </div>
                        
                        <div class="input-field">
                            <i class="material-icons prefix">lock</i>
                            <input id="password" name="password" type="password" class="validate" required>
                            <label for="password">Senha</label>
                        </div>
                        
                        <div class="center-align">
                            <button id="btn-login" class="btn waves-effect waves-light teal darken-2" type="submit">
                                Entrar <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </form>
                    
                    <div class="center-align mt-3">
                        <p>
                            <a href="/forgot-password" class="teal-text text-darken-2">Esqueceu a senha?</a>
                        </p>
                        <p>
                            Não tem uma conta? <a href="/register" class="teal-text text-darken-2">Cadastre-se</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rodapé da página -->
    <footer class="page-footer teal darken-2">
        <div class="footer-copyright">
            <div class="container">
                © 2025 Sistema de Login - Mentoria 2.0
            </div>
        </div>
    </footer>

    <!-- Importação do jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Importação do MaterializeCSS JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- Importação do JavaScript personalizado -->
    <script src="/js/main.js"></script>
    
    <!-- Script para exibir mensagens de toast -->
    <% if (message && message !== '') { %>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Exibe um toast com a mensagem recebida do servidor
                const toastHTML = '<span><%= message %></span>';
                const toastClass = '<%= type === "success" ? "green" : "red" %>';
                M.toast({html: toastHTML, classes: toastClass, displayLength: 4000});
            });
        </script>
    <% } %>
</body>
</html>